<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF4">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/header">
        <ImageView
            android:layout_height="22dp"
            android:layout_width="22dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_magnifying_glass" />
        <EditText
            android:id="@+id/txtTextSearch"
            style="@style/MyEditTextstyle"
            android:layout_marginLeft="30dp"
            android:paddingBottom="8dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:inputType = "textNoSuggestions"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_user_loc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_alignParentBottom="true" />
        <ListView
            android:id="@+id/user_loc_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_user_gps_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF2"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="false"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp">
            <LinearLayout
                android:id="@+id/ll_user_gps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_my_location_black_24dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/use_my_loc"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack">
                </TextView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
