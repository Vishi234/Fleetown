<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorF4">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:background="@color/header">
        <TextView
            android:id="@+id/button_back"
            style="@style/tabBackButton"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_brand_logo"
            style="@style/tabHeaderTextView"
            android:text="Time Slot and Address"
            android:layout_toRightOf="@id/button_back"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_header"
        android:layout_above="@+id/rl_bottom_button"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose time slot for service that suits your schedule"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date of Service"
                    android:layout_marginBottom="10dp"
                    android:textSize="14dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        android:clipToPadding="false"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Preffered Time"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/timeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    android:clipToPadding="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Location"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Address"
                        android:textSize="12dp"
                        android:textColor="@color/linkcolor"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:minLines="4"
                        android:gravity="top|left"
                        android:background="@drawable/edittext_withoutborder"
                        android:hint="Enter your address or click below link to update"
                        android:textSize="11dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add/Update"
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:gravity="bottom|right"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Arrival Mode"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_pickup"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_white_circle"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="00dp"
                        android:gravity="bottom|center"
                        android:drawableTop="@drawable/ic_pickup"
                        android:text="Pickup"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:id="@+id/tv_selfdrop"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_white_circle"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:drawableTop="@drawable/ic_selfdrop"
                        android:text="Self Drop"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:id="@+id/tv_doorstep"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_white_circle"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:drawableTop="@drawable/ic_doorstep"
                        android:text="Doorstep"
                        android:textSize="12dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_bottom_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp" >
            <Button
                style="@style/ButtonPrimary"
                android:layout_height="50dp"
                android:id="@+id/btn_selectdate"
                android:text="Proceed For Further">
            </Button>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
