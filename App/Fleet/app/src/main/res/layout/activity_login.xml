<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg_gradient">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="30dp"
        android:background="@drawable/bg_white_pop">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorDefault"
            android:textSize="30dp"
            android:letterSpacing="0.1"
            android:textFontWeight="600"/>
        <TextView
            android:id="@+id/tv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border80"
            android:drawableLeft="@drawable/login_language_icon"
            android:drawableRight="@drawable/caret_down"
            android:textColor="@color/color80"
            android:textSize="12dp"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:text="Language"
            android:layout_gravity="center_horizontal"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_mobile"
            android:layout_marginTop="5dp"
            style="@style/MaterialInput"
            android:layout_below="@id/tv_login_logo">
            <EditText
                android:id="@+id/et_mobile_number"
                style="@style/DefaultEditText"
                android:maxLength="14"
                android:inputType = "number"
                android:digits="0123456789"
                android:hint="Mobile Number*"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_login"
            style="@style/ButtonPrimary"
            android:layout_marginTop="10dp"
            android:text="@string/login_btn_text"
            android:layout_below="@id/text_input_mobile">
        </Button>
        <TextView
            style="@style/LinkStyle"
            android:layout_marginTop="5dp"
            android:text="Having Login Issue?"
            android:gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/orText"
                android:background="@color/color80" />
            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="  Or Login Using  "
                android:textColor="@color/color80" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/orText"
                android:background="@color/color80" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:background="@drawable/fbimg"
                android:padding="15dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/fb_icon"/>
            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:background="@drawable/googleimg"
                android:padding="15dp"
                android:src="@drawable/google_icon"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
